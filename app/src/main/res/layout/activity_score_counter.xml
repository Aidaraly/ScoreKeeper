<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="290dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context=".ScoreCounter">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Red corner"
                android:textAlignment="center"
                android:textColor="#870000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/RedScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/BlueHead360"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="10dp"
                android:background="#870000"
                android:onClick="addFourRed"
                android:text="+4 360째Head"

                />

            <Button
                android:id="@+id/BlueHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="10dp"
                android:background="#870000"
                android:onClick="addThreeRed"
                android:text="+3 head" />

            <Button
                android:id="@+id/BlueBody360"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="10dp"

                android:background="#870000"
                android:onClick="addThreeRed"
                android:text="+3 360째body" />

            <Button
                android:id="@+id/BlueBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="10dp"
                android:background="#870000"
                android:onClick="addTwoRed"
                android:text="+2 body" />

            <Button
                android:id="@+id/BlueHand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="#870000"
                android:onClick="addOneRed"
                android:text="+1 hand" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="290dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context=".ScoreCounter">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Blue corner"
                android:textAlignment="center"
                android:textColor="#1d0085"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/BlueScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/RedHead360"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="10dp"
                android:background="#1d0085"
                android:onClick="addFourBlue"
                android:text="+4 360째Head" />

            <Button
                android:id="@+id/RedHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="10dp"
                android:background="#1d0085"
                android:onClick="addThreeBlue"
                android:text="+3 head" />

            <Button
                android:id="@+id/RedBody360"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="10dp"
                android:background="#1d0085"
                android:onClick="addThreeBlue"
                android:text="+3 360째body" />

            <Button
                android:id="@+id/RedBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="10dp"
                android:background="#1d0085"
                android:onClick="addTwoBlue"
                android:text="+2 body" />

            <Button
                android:id="@+id/RedHand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="#1d0085"
                android:onClick="addOneBlue"
                android:text="+1 hand" />

        </LinearLayout>


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:text="Reset"
        android:textSize="20dp"
        android:background="#024e5c"
        android:onClick="resetButton"
        />

</RelativeLayout>